@model ClinicPulse.Models.ClinicPulseViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper" style="min-height: 946px;">

    <section class="content-header">
        <h1>
            Cadastro de Usuários
        </h1>
        <ol class="breadcrumb">
            <li><a href="/Painel"><i class="fa fa-dashboard"></i> Painel</a></li>
            <li class="active">Cadastro de Pacientes</li>
        </ol>
    </section>

    @using (Ajax.BeginForm("Cadastrar", "CadastroUsuario", new AjaxOptions { HttpMethod = "Post" }, new { id = "myForm" }))
    {
        @Html.AntiForgeryToken()
        <section class="content">
            <div class="row">
                <!-- left column -->
                <div class="col-md-6">
                    <!-- general form elements disabled -->
                    <div class="box box-info">
                        <div class="box-header">
                            <h3 class="box-title">Geral</h3>
                        </div>
                        <div class="box-body">
                            <div class="row">
                                <div class="col-xs-12 col-sm-6 col-md-6">
                                    @Html.LabelFor(x => x.Usuario.Nome)
                                    @Html.TextBoxFor(x => x.Usuario.Nome, new { @class = "form-control", @required = "required" })
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-6">
                                    @Html.LabelFor(x => x.Usuario.Perfil)<br />
                                    @Html.CheckBoxFor(x => x.Usuario.Medico) Usuário é um profissional? (Medico/Dentista)
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-12">
                                    @Html.LabelFor(x => x.Usuario.Email)
                                    @Html.TextBoxFor(x => x.Usuario.Email, new { @class = "form-control", @required = "required", @type = "email" })
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-6">
                                    @Html.LabelFor(x => x.Usuario.Senha)
                                    @Html.PasswordFor(x => x.Usuario.Senha, new { @class = "form-control", @required = "required" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-2">
                    <button id="btnSalvar" class="btn btn-block btn-success">Salvar</button>
                </div>
            </div>
        </section>
    }
</div>
<script src="~/js/cadastroindexcript.js"></script>
<script>
    $("myForm").submit(function () {
        $(this).submit(function () {
            return false;
        });
        return true;
    });
</script>
